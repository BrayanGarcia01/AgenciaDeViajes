create table USUARIO
(
    NOMBRE          VARCHAR(50)     not null,
    CONTRASENIA     VARCHAR(50)     not null,
    NOMBRECOMPLETO  VARCHAR(100)    not null,
    CARGO           NUMERIC         not null,
    FECHACREACION   TIMESTAMP       not null,
    primary key (NOMBRE)
);


